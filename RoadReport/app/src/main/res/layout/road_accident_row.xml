<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_accident_type_1">

    <TextView
        android:id="@+id/textView_accidentCard_situationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/all_default_margin"
        android:layout_marginTop="@dimen/all_default_margin"
        android:text="事故"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_accidentCard_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/all_default_margin"
        android:layout_marginTop="@dimen/all_default_margin"
        android:layout_toEndOf="@id/textView_accidentCard_situationType"
        android:text="谷川大橋上山"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_accidentCard_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_accidentCard_situationType"
        android:layout_marginStart="@dimen/all_default_margin"
        android:layout_marginTop="@dimen/all_default_margin"
        android:text="下橋有車自撞，駕駛技術超級差勁"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_accidentCard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_accidentCard_situation"
        android:layout_marginStart="@dimen/all_default_margin"
        android:layout_marginTop="44dp"
        android:text="2020/04/05 11:55"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_accidentCard_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_accidentCard_situation"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/all_default_margin"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="@dimen/all_default_margin"
        android:layout_toEndOf="@id/textView_accidentCard_time"
        android:text="蔡英文"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>