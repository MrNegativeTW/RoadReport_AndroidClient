<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/all_default_margin"
    app:cardElevation="@dimen/materialCard_half">

    <RelativeLayout
        android:id="@+id/relaLayout_accidentCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_accident_type_1">

        <TextView
            android:id="@+id/textView_accidentCard_situationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/all_default_margin"
            android:layout_marginTop="@dimen/all_default_margin"
            android:background="@drawable/outline_accident_type"
            android:paddingHorizontal="4dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="事故" />

        <TextView
            android:id="@+id/textView_accidentCard_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/all_defaultHalf_margin"
            android:layout_marginTop="@dimen/all_default_margin"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_toStartOf="@id/imageButton_accidentCard_more"
            android:layout_toEndOf="@id/textView_accidentCard_situationType"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="北上方向87K處" />

        <ImageButton
            android:id="@+id/imageButton_accidentCard_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/all_default_margin"
            android:layout_marginEnd="@dimen/all_default_margin"
            android:background="?android:selectableItemBackground"
            android:contentDescription="More"
            android:src="@drawable/ic_more_horiz_black_24dp" />

        <TextView
            android:id="@+id/textView_accidentCard_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_accidentCard_situationType"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/all_default_margin"
            android:layout_marginTop="@dimen/all_defaultHalf_margin"
            android:layout_marginEnd="@dimen/margin_normal"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="下橋有國產豐田自撞，國產鋁罐導致電線桿沒事但車毀人亡，但死者為大我們比個讚。" />

        <ImageView
            android:id="@+id/imageView_accidentCard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_accidentCard_situation"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_accidentCard_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_accidentCard_image"
            android:layout_marginStart="@dimen/all_default_margin"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="@dimen/all_defaultHalf_margin"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="2020/04/05 11:55" />

        <TextView
            android:id="@+id/textView_accidentCard_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_accidentCard_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/all_default_margin"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="@dimen/all_default_margin"
            android:layout_toEndOf="@id/textView_accidentCard_time"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="王大明" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>